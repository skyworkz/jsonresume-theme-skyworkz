{{#if resume.work.length}}
<section id="work">
	<div class="card p-3 mb-3">
		<h3 class="my-0">
			<i class="fa-regular fa-building me-2"></i>
			Work
		</h3>
		{{#each resume.work}}
		<hr>
		<div class="item">
			<div class="row">
				<div class="col">
					{{#if name}}
						<h4 class="name">
							{{name}}
						</h4>
					{{/if}}
				</div>
				<div class="col">
					<div class="date d-flex justify-content-end">
						<div class="badge">
							{{#if startDate}}
							<span class="startDate">
								{{startDate}}
							</span>
							{{/if}}
							{{#if endDate}}
							<span class="endDate">
								- {{endDate}}
							</span>
							{{else}}
							<span class="endDate">
								- Present
							</span>
							{{/if}}
						</div>
					</div>
				</div>
			</div>
			{{#if position}}
			<em class="position">
				{{position}}
			</em>
			{{/if}}
			{{#if url}}
			<div class="website">
				<a href="{{url}}" target="_blank">{{url}}</a>
			</div>
			{{/if}}
			{{#if summary}}
			<div class="summary mt-3">
				<p>{{summary}}</p>
			</div>
			{{/if}}
			{{#if highlights.length}}
			<h5>Highlights</h5>
			<ul class="highlights">
				{{#each highlights}}
				<li>{{.}}</li>
				{{/each}}
			</ul>
			{{/if}}
			{{#if keywords.length}}
			<h5>Keywords</h5>
			<div class="mt-3">
				{{#each keywords}}
				<span class="badge mb-2">{{.}}</span>
				{{/each}}
			</div>
			{{/if}}
		</div>
		{{/each}}
	</div>
</section>
{{/if}}