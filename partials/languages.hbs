{{#if resume.languages.length}}
<section id="languages">
	<div class="card p-3 mb-3">
		<h3 class="my-0">
			<i class="fa-solid fa-language me-2"></i>
			Languages
		</h3>
		<hr class="mt-2">
		{{#each resume.languages}}
		<div class="item">
			{{#if language}}
			<div class="language">
				{{language}}
			</div>
			{{/if}}
			{{#if fluency}}
			<div class="fluency">
				<em>{{fluency}}</em>
			</div>
			{{/if}}
		</div>
		{{/each}}
	</div>
</section>
{{/if}}