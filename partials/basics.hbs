{{#resume.basics}}
<section id="basics">
	<div class="card p-3 mb-3">
		<div class="row">
			<div class="col">
				{{#if image}}
				<div class="d-flex justify-content-center">
					<img class="profile-pic my-4" data-src="{{image}}"
							alt="{{name}}"
							src="{{image}}"
							itemprop="image">
				</div>
				{{/if}}
				<h1 class="text-center">{{name}}</h1>
				<h2 class="text-center">{{label}}</h2>
			</div>
			<div class="col">
				<div class="contact">
					<h3 class="mt-4 mb-0">
						<i class="fa-solid fa-location-dot me-2"></i>
						Contact
					</h3>
					<hr class="mt-2">
					{{#if url}}
					<div class="website">
						<i class="fa-solid fa-link me-3"></i>
						<a href="{{url}}" target="_blank">
							{{url}}
						</a>
					</div>
					{{/if}}
					{{#if email}}
					<div class="email">
						<i class="fa-solid fa-envelope me-3"></i>
						{{email}}
					</div>
					{{/if}}
					{{#if phone}}
					<div class="phone">
						<i class="fa-solid fa-phone me-3"></i>
						{{phone}}
					</div>
					{{/if}}
				</div>
			</div>
			<div class="col">
				{{#location}}
					<h3 class="mt-4 mb-0">
						<i class="fa-solid fa-location-dot me-2"></i>
						Location
					</h3>
					<hr class="mt-2">
					<section id="location">
						{{#if address}}
							{{address}},
						{{/if}}
						{{#if postalCode}}
							{{postalCode}},
						{{/if}}
						{{#if city}}
							{{city}},
						{{/if}}
						<div class="clearfix" />
						{{#if region}}
							{{region}},
						{{/if}}
						{{#if countryCode}}
							{{countryCode}}
						{{/if}}
					</section>
					{{/location}}
			</div>
			<div class="col">
				{{#if profiles.length}}
				<h3 class="mt-4 mb-0">
					<i class="fa-solid fa-globe me-2"></i>
					Profiles
				</h3>
				<hr class="mt-2">
				<section id="profiles">
					<div class="d-flex justify-content-start">
						{{#each profiles}}
							<div class="item">
								{{#if network}}
									<a class="d-block text-center" href="{{url}}" target="_blank">
										{{#network-fa-icon network}}{{/network-fa-icon}}
									</a>
								{{/if}}
								{{#if username}}
									<a class="d-block text-center" href="{{url}}" target="_blank">
										{{username}}
									</a>
								{{/if}}
								</a>
							</div>
						{{/each}}
					</div>
				</section>
				{{/if}}
			</div>
		</div>
	</div>
</section>
{{/resume.basics}}