{{#if resume.awards.length}}
<section id="awards">
	<div class="card p-3 mb-3">
		<h3 class="my-0">
			<i class="fa-solid fa-code me-2"></i>
			Awards
		</h3>
		<hr class="mt-2">
		{{#each resume.awards}}
		<div class="item">
			{{#if title}}
			<div class="title">
				{{title}}
			</div>
			{{/if}}
			{{#if date}}
			<div class="date">
				{{date}}
			</div>
			{{/if}}
			{{#if awarder}}
			<div class="awarder">
				{{awarder}}
			</div>
			{{/if}}
			{{#if summary}}
			<div class="summary">
				<p>{{summary}}</p>
			</div>
			{{/if}}
		</div>
		{{/each}}
	</div>
</section>
{{/if}}